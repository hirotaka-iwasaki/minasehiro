---
import BaseLayout from '@/layouts/BaseLayout.astro';

const email = 'minasehiro.dev@gmail.com';
---

<BaseLayout title="Contact" description="Contact minasehiro">
  <div class="space-y-6">
    <h1 class="text-2xl font-bold">Contact</h1>

    <div class="prose max-w-none">
      <p class="text-neutral-600 dark:text-neutral-400">
        ご質問やお仕事のご依頼など、お気軽にご連絡ください。
      </p>

      <div class="mt-6 p-4 rounded-lg border border-neutral-200 dark:border-neutral-800">
        <h3 class="font-medium mb-2">Email</h3>
        <a
          href={`mailto:${email}`}
          class="text-primary hover:underline"
        >
          {email}
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
