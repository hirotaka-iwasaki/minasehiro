---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const recentProjects = projects.slice(0, 3);

const galleryPreview = [
  '/images/gallery/1.webp',
  '/images/gallery/2.webp',
  '/images/gallery/3.webp',
];
---

<BaseLayout title="">
  <div class="space-y-12">
    <!-- Intro Section -->
    <section class="text-center py-8">
      <img
        src="/images/profile.jpg"
        alt="Profile"
        class="w-24 h-24 rounded-full mx-auto mb-4 object-cover"
      />
      <h1 class="text-3xl font-bold mb-2">minasehiro</h1>
      <div class="text-neutral-600 dark:text-neutral-400 space-y-1">
        <p>Engineer | Photographer</p>
        <p class="text-sm">検討より検証 / 遠きに行くには必ず邇きよりす</p>
      </div>
    </section>

    <!-- Engineer Section -->
    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold">Engineer</h2>
        <a
          href="/engineer"
          class="text-sm text-neutral-500 hover:text-foreground transition-colors"
        >
          View More
        </a>
      </div>
      {recentProjects.length > 0 ? (
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
          {recentProjects.map(project => (
            <a
              href={`/projects/${project.id}`}
              class="flex gap-3 p-4 rounded-lg border border-neutral-200 dark:border-neutral-800 hover:bg-neutral-50 dark:hover:bg-neutral-900 transition-colors"
            >
              {project.data.icon && (
                <img
                  src={project.data.icon}
                  alt={project.data.title}
                  class="w-12 h-12 rounded-lg object-cover flex-shrink-0"
                />
              )}
              <div class="flex-1 min-w-0">
                <h3 class="font-medium text-sm mb-1">{project.data.title}</h3>
                <p class="text-xs text-neutral-600 dark:text-neutral-400 line-clamp-2">
                  {project.data.summary}
                </p>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <p class="text-neutral-600 dark:text-neutral-400">Coming soon...</p>
      )}
    </section>

    <!-- Photographer Section -->
    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold">Photographer</h2>
        <a
          href="/photographer"
          class="text-sm text-neutral-500 hover:text-foreground transition-colors"
        >
          View More
        </a>
      </div>
      <div class="grid grid-cols-3 gap-4">
        {galleryPreview.map((src, i) => (
          <img
            src={src}
            alt={`Photo ${i + 1}`}
            class="aspect-square object-cover rounded-lg"
            loading="lazy"
          />
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
