---
import BaseLayout from '@/layouts/BaseLayout.astro';
import LinkCard from '@/components/astro/link-card.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');

const skills = {
  languages: ['Python', 'Dart', 'Ruby', 'TypeScript'],
  frameworks: ['Flutter', 'Rails', 'FastAPI'],
  tools: ['Git', 'Docker', 'Firebase', 'Cloudflare', 'AWS', 'Google Cloud'],
  ai: ['Claude', 'ChatGPT', 'Gemini'],
};

const engineerLinks = [
  {
    name: 'GitHub',
    link: 'https://github.com/minasehiro',
    description: '各種ソースコードを公開しています。',
    avatar: '/images/services/github.svg',
  },
  {
    name: 'Zenn',
    link: 'https://zenn.dev/minasehiro',
    description: 'AI や Flutter、Rails に関する記事を公開しています。',
    avatar: '/images/services/zenn.svg',
  },
];
---

<BaseLayout title="Engineer" description="エンジニアとしての活動">
  <div class="space-y-8">
    <section class="text-center">
      <h1 class="text-2xl font-bold mb-4">Engineer</h1>
      <p class="text-neutral-600 dark:text-neutral-400">
        AI駆動開発に全振りをしているエンジニアです。
      </p>
      <p class="text-neutral-600 dark:text-neutral-400">
        効率的な開発と「自分が欲しい」プロダクト作りを心がけています。
      </p>
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Skills</h2>
      <div class="space-y-4">
        <div>
          <h3 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 mb-2">Languages</h3>
          <div class="flex gap-2 flex-wrap">
            {skills.languages.map(skill => (
              <span class="px-3 py-1 bg-neutral-100 dark:bg-neutral-800 rounded-full text-sm">
                {skill}
              </span>
            ))}
          </div>
        </div>
        <div>
          <h3 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 mb-2">Frameworks</h3>
          <div class="flex gap-2 flex-wrap">
            {skills.frameworks.map(skill => (
              <span class="px-3 py-1 bg-neutral-100 dark:bg-neutral-800 rounded-full text-sm">
                {skill}
              </span>
            ))}
          </div>
        </div>
        <div>
          <h3 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 mb-2">Tools</h3>
          <div class="flex gap-2 flex-wrap">
            {skills.tools.map(skill => (
              <span class="px-3 py-1 bg-neutral-100 dark:bg-neutral-800 rounded-full text-sm">
                {skill}
              </span>
            ))}
          </div>
        </div>
        <div>
          <h3 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 mb-2">AI Tools</h3>
          <div class="flex gap-2 flex-wrap">
            {skills.ai.map(skill => (
              <span class="px-3 py-1 bg-neutral-100 dark:bg-neutral-800 rounded-full text-sm">
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Projects</h2>
      {allProjects.length === 0 ? (
        <p class="text-neutral-600 dark:text-neutral-400">Coming soon...</p>
      ) : (
        <div class="grid gap-4 md:grid-cols-2">
          {allProjects.map(project => (
            <a
              href={project.data.type === 'web' ? project.data.siteUrl : `/apps/${project.id}`}
              target={project.data.type === 'web' ? '_blank' : undefined}
              rel={project.data.type === 'web' ? 'noopener noreferrer' : undefined}
              class="flex gap-4 p-4 rounded-lg border border-neutral-200 dark:border-neutral-800 hover:bg-neutral-50 dark:hover:bg-neutral-900 transition-colors"
            >
              {project.data.icon && (
                <img
                  src={project.data.icon}
                  alt={project.data.title}
                  class="w-16 h-16 rounded-xl object-cover flex-shrink-0"
                />
              )}
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="font-medium">{project.data.title}</h3>
                  <span class={`text-xs px-2 py-0.5 rounded-full ${project.data.type === 'app' ? 'bg-blue-100 text-blue-700 dark:bg-blue-900 dark:text-blue-300' : 'bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300'}`}>
                    {project.data.type === 'app' ? 'Mobile' : 'Web'}
                  </span>
                </div>
                <p class="text-sm text-neutral-600 dark:text-neutral-400 mb-2 line-clamp-2">
                  {project.data.summary}
                </p>
              </div>
            </a>
          ))}
        </div>
      )}
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Links</h2>
      <div class="grid gap-4 md:grid-cols-2">
        {engineerLinks.map((link) => (
          <LinkCard
            name={link.name}
            link={link.link}
            description={link.description}
            avatar={link.avatar}
          />
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
