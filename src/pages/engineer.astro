---
import BaseLayout from '@/layouts/BaseLayout.astro';
import LinkCard from '@/components/astro/link-card.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');

const techStack = [
  ['Python', 'Dart', 'Ruby', 'TypeScript'],
  ['FastAPI', 'Flutter', 'Rails', 'Next.js'],
  ['AWS', 'Google Cloud', 'Firebase', 'Cloudflare'],
  ['Claude', 'GPT', 'Gemini'],
];

const engineerLinks = [
  {
    name: 'GitHub',
    link: 'https://github.com/minasehiro',
    description: '各種ソースコードを公開しています。',
    avatar: '/images/services/github.svg',
  },
  {
    name: 'Zenn',
    link: 'https://zenn.dev/minasehiro',
    description: 'AI や Flutter、Rails に関する記事を公開しています。',
    avatar: '/images/services/zenn.svg',
  },
];
---

<BaseLayout title="Engineer" description="エンジニアとしての活動">
  <div class="space-y-8">
    <section class="text-center">
      <h1 class="text-2xl font-bold mb-4">Engineer</h1>
      <p class="text-neutral-600 dark:text-neutral-400">
        AI駆動開発に全振りをしているエンジニアです。
      </p>
      <p class="text-neutral-600 dark:text-neutral-400">
        効率的な開発と「自分が欲しい」プロダクト作りを心がけています。
      </p>
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Tech Stack</h2>
      <div class="space-y-2">
        {techStack.map(row => (
          <p class="text-neutral-600 dark:text-neutral-400">
            {row.join(' / ')}
          </p>
        ))}
      </div>
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Projects</h2>
      {allProjects.length === 0 ? (
        <p class="text-neutral-600 dark:text-neutral-400">Coming soon...</p>
      ) : (
        <div class="grid gap-4 md:grid-cols-2">
          {allProjects.map(project => (
            <a
              href={`/projects/${project.id}`}
              class="flex gap-4 p-4 rounded-lg border border-neutral-200 dark:border-neutral-800 hover:bg-neutral-50 dark:hover:bg-neutral-900 transition-colors"
            >
              {project.data.icon && (
                <img
                  src={project.data.icon}
                  alt={project.data.title}
                  class="w-16 h-16 rounded-xl object-cover flex-shrink-0"
                />
              )}
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="font-medium">{project.data.title}</h3>
                </div>
                <p class="text-sm text-neutral-600 dark:text-neutral-400 mb-2 line-clamp-2">
                  {project.data.summary}
                </p>
                <div class="flex gap-2 flex-wrap">
                  {project.data.platforms.map(platform => (
                    <span class={`text-xs px-2 py-0.5 rounded ${platform.status === 'active' ? 'bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300' : 'bg-yellow-100 text-yellow-700 dark:bg-yellow-900 dark:text-yellow-300'}`}>
                      {platform.name}{platform.status !== 'active' && ' (開発中)'}
                    </span>
                  ))}
                </div>
              </div>
            </a>
          ))}
        </div>
      )}
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Links</h2>
      <div class="grid gap-4 md:grid-cols-2">
        {engineerLinks.map((link) => (
          <LinkCard
            name={link.name}
            link={link.link}
            description={link.description}
            avatar={link.avatar}
          />
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
