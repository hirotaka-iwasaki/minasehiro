---
import { ThemeToggle } from '@/components/react/theme-toggle';
import { siteConfig } from '@/config';
---

<header class="flex h-20 w-full items-center justify-between border-b border-neutral-200 dark:border-neutral-800 px-4 md:px-0">
  <a href="/" aria-label={`${siteConfig.siteName} - Home`}>
    <div class="text-xl font-semibold">{siteConfig.siteName}</div>
  </a>

  <nav class="flex items-center gap-6">
    <ul class="hidden md:flex items-center gap-6">
      {
        siteConfig.navigation.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100 transition-colors"
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>

    <div class="flex items-center gap-4">
      {
        siteConfig.social.map((social) => (
          <a
            href={social.link}
            target="_blank"
            rel="noopener noreferrer"
            class="hidden md:block text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100 transition-colors"
            aria-label={social.label}
            title={social.label}
          >
            <social.icon className="h-5 w-5" />
          </a>
        ))
      }

      <ThemeToggle client:load />
    </div>
  </nav>
</header>
